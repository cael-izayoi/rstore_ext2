@page "{id:int}"
@model Rstore_ext.Pages.Products.DeleteModel
@{
    ViewData["Title"] = "Удалить товар";
}

<h2>Удалить товар</h2>

@if (Model.Product == null)
{
    <div class="alert alert-danger">Товар не найден.</div>
}
else
{
    <div class="alert alert-warning">
        Вы уверены, что хотите удалить товар <strong>@Model.Product.Name</strong>?
    </div>

    <form method="post">
        <input type="hidden" asp-for="Product.Id" />
        <button type="submit" class="btn btn-danger">Удалить</button>
        <a asp-page="Index" class="btn btn-secondary">Отмена</a>
    </form>
}
